<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kms.dao.RoleDao">
	<insert id="add" parameterType="org.kms.pojo.Role"
		useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into Role(roleName,available)
			values(#{roleName},#{available})
	</insert>
	
	<update id="update" parameterType="org.kms.pojo.Role">
		update Role set roleName=#{roleName},available=#{available}
		where id = #{id}
	</update>
	
	<delete id="deleteByIds" parameterType="java.lang.reflect.Array">
		delete from Role where id in
		<foreach collection="array" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	
	<select id="getAll" resultType="org.kms.pojo.Role">
		select * from Role
	</select>
	
	<sql id="conditionSql">
		<if test="condition != null">
			<where>
				
			</where>
		</if>
	</sql>
	
	<select id="getById" parameterType="int" resultType="org.kms.pojo.Role">
		select * from Role where id = #{id}
	</select>
	
	
	<select id="getListByCondition" resultType="org.kms.pojo.Role">
		select * from Role
			<include refid="conditionSql"></include>
		order by ${column} ${orderBy}
			limit #{start},#{limit}
	</select>
	<select id="getCountByCondition" resultType="int">
		select count(1) from Role
			<include refid="conditionSql"></include>
	</select>
	
	
	
	
	
	
</mapper>